
body {
  font-family: "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 14px;
  line-height: 1.42857143;
  color: #eee;
  background-color: #060606;
}
.btn-default {
  color: #fff;
}

.movie-list {
  padding: 50px 10px 0px 10px;
  overflow-x: hidden;

  .movie-item {
    padding: 10px;
    border-bottom: 1px solid #444;

    color: #eee;
    h3 {
      text-align : center;
      margin-bottom: 30px;
      border-radius : 10px;
      /*background: rgb(45, 45, 45);*/
      /*border: 1px solid #666;*/
      /*padding: 10px;*/
      .glyphicon {
        position : relative;
        top:2px;
        font-size:80%;
        color: #FF3636;
      }
    }

    .column.cover-column {
      text-align: right;
      padding-right:0;
      p {
        text-align: center;
      }
    }

    .cover-wrapper {
      display: inline-block;
      overflow: hidden;
      position: relative;

      // use predetermined dimensions to prevent layout trashing
      img {
        width: 150px;
        height: 212px;
        margin-bottom :10px;
      }
    }

    .movie-special-badge {
      position: absolute;
      transform: rotateZ(-45deg);
      left: -22px;
      top: 19px;
      padding: 2px 17px 3px 17px;
      font-size: 12px;
      text-align: center;
      border-radius: 0;
      box-sizing: border-box;
      width: 100px;
      &.badge-new {

      }
    }

    .movie-info {
      .movie-info-item {
        margin-bottom: 10px;
      }

    }

    p.desc {
      margin-top: 10px;
      font-size: 16px;
    }
  }

}

.btn-default, .btn-default:active {
  background-color: #560000;
  border-color: #560000;
  border-radius: 10px;
  padding: 3px 7px 3px 7px;
}

.badge {
  padding-top: 5px;
  font-size: inherit;
}

.badge-default {
  background-color:  #060606;
  border: 1px solid #666;
}

.badge-danger {
  background-color:  #A52323;
}

.badge-last-chance {
  background-color: #A5239E;
}
.badge-new {
  background-color: #23A525;
}

a.btn-xs > .glyphicon {
  line-height: 0;
  margin-right: 5px;
  position: relative;
  top:2px;

  &.glyphicon-right {
    margin-left: 5px;
    margin-right: 0;
  }
}



icon-size = 25px

.kijkwijzer {
  background: url('kijkwijzer.png') no-repeat top left;
  width: icon-size;
  height: icon-size;
  display: inline-block;
  -webkit-filter: invert(100%);
  background-size: icon-size;
  &.sprite_6  { background-position: 0 0; }
  &.sprite_9  { background-position: 0 -1 * icon-size; }
  &.sprite_12 { background-position: 0 -2 * icon-size; }
  &.sprite_16 { background-position: 0 -3 * icon-size; }
  &.sprite_A  { background-position: 0 -4 * icon-size; }
  &.sprite_AL { background-position: 0 -5 * icon-size; }
  &.sprite_D  { background-position: 0 -6 * icon-size; }
  &.sprite_G  { background-position: 0 -7 * icon-size; }
  &.sprite_H  { background-position: 0 -8 * icon-size; }
  &.sprite_S  { background-position: 0 -9 * icon-size; }
  &.sprite_T  { background-position: 0 -10 * icon-size; }
}





