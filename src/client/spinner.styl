@import 'lib/mixins'


.big-spinner {
  bottom: 0;
  height: 80px;
  left: 0;
  margin: auto;
  position: absolute;
  top: 0;
  right: 0;
  width: 80px;
  animation: rotation .6s infinite linear;
  border-left: 6px solid rgba(193, 41, 41, 0.25);
  border-right: 6px solid rgba(193, 41, 41, 0.25);
  border-bottom: 6px solid rgba(193, 41, 41, 0.25);
  border-top: 6px solid rgba(193, 41, 41, 0.8);
  border-radius: 100%;
}

@keyframes rotation {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(359deg);
  }
}

